<common:BasePopup xmlns:fx="http://ns.adobe.com/mxml/2009"
                  xmlns:common="com.grom.HRLevelExporter.views.common.*" xmlns:s="library://ns.adobe.com/flex/spark"
                  title="Settings">
	<fx:Script><![CDATA[
		import mx.core.FlexGlobals;
		import mx.managers.PopUpManager;

		public static function show():void
		{
			var popup:SettingsPopup = new SettingsPopup();
			PopUpManager.addPopUp(popup, DisplayObject(FlexGlobals.topLevelApplication), true);
			PopUpManager.centerPopUp(popup);
		}
		]]></fx:Script>

	<s:Form>
		<s:FormItem label="Sort levels by priority">
			<s:CheckBox id="sortLevelsCheck"/>
		</s:FormItem>
	</s:Form>

</common:BasePopup>
